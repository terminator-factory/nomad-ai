# Настройки приложения
APP_NAME=NoMadAI
DEBUG=true
HOST=0.0.0.0
PORT=3001

# CORS настройки (разделенные запятыми)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9090

# База данных
DATABASE_URL=sqlite:///./data/app.db

# LLM настройки
LLM_TYPE=ollama  # ollama, openai, mistral
LLM_API_URL=http://localhost:11434/api
LLM_API_KEY=
DEFAULT_MODEL=gemma3:4b

# Настройки для документов
MAX_UPLOAD_SIZE=20971520  # 20MB
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Настройки для векторного хранилища
VECTOR_STORE_TYPE=faiss  # faiss, chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Настройки WebSocket
WS_PING_INTERVAL=30  # секунды

# Режимы работы
RAG_ENABLED=true

# Настройки кэширования
CACHE_ENABLED=true
REDIS_URL=

# Настройки логирования
LOG_LEVEL=INFO